<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/BlueColorPrimary</item>
        <item name="colorPrimaryDark">@color/BlueColorPrimaryDark</item>
        <item name="colorAccent">@color/RedColorPrimary</item>
        <item name="alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="AppTheme.LoginTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/transparent</item>
        <item name="colorAccent">@color/BlueColorPrimary</item>
        <item name="android:windowBackground">@drawable/cold_start_background</item>
    </style>

    <style name="AppTheme.placeholder">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/edit_people_info_background</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <!-- Used for the buttons -->
        <item name="colorAccent">@color/RedColorPrimary</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">@color/BlueColorPrimary</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>