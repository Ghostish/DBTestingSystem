<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/add_content_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:visibility="visible">

    <TextView
        android:id="@+id/title_add_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/title_add_paper_scheme"
        android:textSize="32sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/desc_add_paper"
        android:textSize="16sp"
        android:textStyle="italic" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/choice_scheme_layout"
        android:text="@string/title_choice"
        android:textColor="@color/RedColorPrimaryDark"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/choice_scheme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/edit_choice_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_question_count"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X" />

        <EditText
            android:id="@+id/edit_choice_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_score"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/gap_scheme_layout"
        android:text="@string/title_gap"
        android:textColor="@color/RedColorPrimaryDark"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/gap_scheme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/edit_gap_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_question_count"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X" />

        <EditText
            android:id="@+id/edit_gap_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_score"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:labelFor="@+id/essay_scheme_layout"
        android:text="@string/title_essay"
        android:textColor="@color/RedColorPrimaryDark"
        android:textSize="16sp" />

    <LinearLayout
        android:id="@+id/essay_scheme_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <EditText
            android:id="@+id/edit_essay_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_question_count"
            android:inputType="numberDecimal"
            android:singleLine="true" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="X" />

        <EditText
            android:id="@+id/edit_essay_score"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:hint="@string/hint_score"
            android:inputType="numberDecimal"
            android:singleLine="true" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="16dp"
            android:layout_toLeftOf="@+id/edit_total_score"
            android:layout_toStartOf="@+id/edit_total_score"
            android:labelFor="@+id/choice_scheme_layout"
            android:text="@string/label_total_score"
            android:textColor="@color/RedColorPrimaryDark"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/edit_total_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:inputType="numberDecimal"
            android:longClickable="false"
            android:minEms="3"
            android:singleLine="true" />
    </RelativeLayout>
</LinearLayout>